<div class='nv-main'>
  <div class='nv-block'>
    <p>Not sure if this matches you?</p>
    <p>Can't decide between what to wear or buy?</p>
    <p>Ask away!</p>
    <%= form_for @post, :html => {:multipart => true} do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.fields_for :photos do |builder| %>
        <% if builder.object.new_record? %>
        <%= builder.file_field :photo %>
        <% end %>
      <% end %>
      <%= f.submit %>
    <% end %>
  </div>
</div>