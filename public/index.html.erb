<div class='nv-block'>
  <% if signed_in? %>
  <%= render 'layouts/header' %>
  <% end %>
</div>

<%=  render 'post_form' %>

<% if @posts %>
  <% @posts.each do |post| %>
    <% if post.status == Post::STATUS_PUBLISHED %>
    <%= render partial: 'post', object: post %>
    <% end %>
  <% end %>
<% end %>
